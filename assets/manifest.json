{{- $sitename := partialCached "_params/site/name" . -}}
{{- $appname := .Site.Params.Offline.Name | default $sitename -}}
{{- $appshortname := .Site.Params.Offline.ShortName | default $sitename -}}

{
	"name": "{{- $appname -}}",
	"short_name": "{{- $appshortname -}}",

	"start_url": "{{- .Site.Home.RelPermalink -}}",
	"display": "standalone",
	"orientation": "portrait",
	"background_color": "#000",
	"theme_color": "#000",

	"icons": [
	]
}
