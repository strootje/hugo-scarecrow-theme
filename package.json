{
	"private": true,
	"name": "hugo-scarecrow-theme",
	"version": "0.1.0",
	"description": "Scarecrow theme for hugo",
	"scripts": {
		"postinstall": "cp ./node_modules/fuse.js/dist/fuse.js ./assets/scripts/fuse.min.js",
		"build": "(cd ./exampleSite && hugo -v --themesDir ../.. -t hugo-scarecrow-theme)",
		"serve": "(cd ./exampleSite && hugo server -w -v --themesDir ../.. -t hugo-scarecrow-theme)",
		"pretest": "rm -rf ./test/results && mkdir -p ./test/results && pnpm run build",
		"test": "mocha"
	},
	"dependencies": {
		"bulma": "*",
		"bulma-timeline": "*",
		"fuse.js": "*"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.11.0",
		"@types/puppeteer": "^1.12.2",
		"@types/resemblejs": "^1.3.28",
		"chai": "^4.2.0",
		"mocha": "^6.0.2",
		"puppeteer": "^1.13.0",
		"puppeteer-firefox": "^0.5.0",
		"resemblejs": "^3.0.2",
		"serve": "*",
		"serve-handler": "*",
		"ts-node": "^8.0.3",
		"typescript": "^3.3.3333"
	}
}
