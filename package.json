{
	"private": true,
	"name": "hugo-scarecrow-theme",
	"version": "0.1.0",
	"description": "Scarecrow theme for hugo",
	"scripts": {
		"clean": "rimraf ./example-site/public",
		"prebuild": "pnpm run clean",
		"build": "hugo --source ./example-site --themesDir ../.. --theme hugo-scarecrow-theme",
		"preserve": "pnpm run clean",
		"serve": "hugo server --source ./example-site --watch --verbose --path-warnings --i18n-warnings --baseUrl http://localhost/ --themesDir ../.. --theme hugo-scarecrow-theme",
		"pretest": "pnpm run build",
		"test": "echo TODO: Mocha"
	},
	"dependencies": {
		"bulma": "^0.8.0",
		"bulma-timeline": "^3.0.4",
		"fuse.js": "^3.4.6"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"cross-env": "^7.0.0",
		"parcel": "^2.0.0-alpha.3.2",
		"rimraf": "^3.0.0"
	}
}
