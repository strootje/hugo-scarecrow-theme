{
	"private": true,
	"name": "hugo-scarecrow-theme",
	"version": "0.1.0",
	"description": "Scarecrow theme for hugo",
	"scripts": {
		"clean": "rimraf ./example-site/public ./example-site/resources",
		"build": "(cd ./example-site && hugo -v --minify --themesDir ../.. -t hugo-scarecrow-theme)",
		"serve": "(cd ./example-site && hugo server -v --watch --minify --themesDir ../.. -t hugo-scarecrow-theme)",
		"pretest": "pnpm run build",
		"test": "mocha"
	},
	"devDependencies": {
		"pnpm": "^5.1.2",
		"rimraf": "^3.0.2"
	}
}
